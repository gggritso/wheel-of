{
  "root": true,
  "extends": ["plugin:react/recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "jquery": true,
    "node": true
  },
  "rules": {
    "max-len": [
      "error",
      {
        "code": 120,
        "ignoreUrls": true,
        "ignoreComments": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "no-undef": "error",
    "no-unused-vars": ["error", { "argsIgnorePattern": "\\b_\\w+" }],
    "no-unreachable": "error",
    "yoda": "error",
    "radix": 1,
    "no-var": [1],
    "prefer-const": [1],
    "no-magic-numbers": [2, { "ignore": [-1, 0, 1, 2, 10, 12, 100] }],
    "no-debugger": [2],
    "no-console": [1],
    "no-alert": [2],
    "eqeqeq": [2]
  }
}
